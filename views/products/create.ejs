<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include Head con CSS -->
    <%- include("../partials/head") %>

    <title>Crear</title>
  </head>
  <body>
    <div class="container">
      <div class="title">
        Agregar Producto
        <a href="/"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
      </div>
      <!-- FORMULARIO -->

      <form method="POST" action="/products/create"  enctype="multipart/form-data">  
        <div class="user-details">
          <div class="input-box">

            <span class="details">Titulo</span>
            <input type="text" name="title" placeholder="Titulo" required />
          </div>
          <div class="input-box">

            <span class="details">Autor</span>
            <input type="text" name="author" placeholder="Autor" required />
          </div>
          <div class="input-box">

            <span class="details">Precio</span>
            <input type="text" name="price" placeholder="Precio" required />
          </div>
          <div class="input-box">

            <span class="details">Moneda</span>
            <input type="text" name="currency" placeholder="Moneda" required />
          </div>
          <div class="input-box">

            <span class="details">Descripcion</span>
            <input type="text" name="description" placeholder="Descripcion" required />
          </div>
          <div class="input-box">

            <span class="details">Imagen</span>
            <div class="foto-producto">
              <input type="file" name="img" accept=".jpg" multiple id="foto-producto"/>
              <label for="foto-producto"
                ><i class="fa-solid fa-image"></i>Foto del producto</label
              >
            </div>
          </div>
        </div>
        <div class="gender-details">
          <input type="radio" name="category" id="dot-1" value="Ciencia ficcion" />
          <input type="radio" name="category" id="dot-2" value="No ficcion" />
          <input type="radio" name="category" id="dot-3" value="Fantasia" />
          <span class="gender-title">Categoria</span>
          <div class="category">
            <label for="dot-1">
              <span class="dot one"></span>
              <span class="gender">Ciencia Ficcion</span>
            </label>
            <label for="dot-2">
              <span class="dot two"></span>
              <span class="gender">No ficcion</span>
            </label>
            <label for="dot-3">
              <span class="dot three"></span>
              <span class="gender">Fantasia</span>
            </label>
          </div>
          <div class="button">
            <input type="submit" value="Agregar" />
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
